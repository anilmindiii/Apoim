<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:animateLayoutChanges="true"
    tools:context="com.apoim.activity.EventDetailsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_200sdp"
        android:orientation="vertical"
        android:animateLayoutChanges="true"
        android:layout_marginTop="?actionBarSize"
        android:background="@drawable/bg_event_details">

        <TextView
            android:id="@+id/tv_event_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:layout_gravity="center"
            android:maxLines="2"
            android:fontFamily="@font/nunito_regular"
            android:ellipsize="end"
            android:textSize="@dimen/text_Medium_Size"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:gravity="center"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_profile"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:src="@drawable/ico_user_placeholder"
            android:layout_gravity="center"
            app:civ_border_color="@color/colorWhite"
            app:civ_border_width="@dimen/_1sdp"
            android:layout_marginTop="@dimen/_5sdp"/>

        <TextView
            android:id="@+id/tv_event_creater_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito_regular"
            android:textColor="@color/colorWhite"
            android:layout_gravity="center"
            android:textSize="@dimen/text_Medium_Size"
            android:layout_marginTop="@dimen/_2sdp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/tv_type_of_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito_light"
            android:text="Administrator"
            android:textColor="@color/colorWhite"
            android:layout_gravity="center"
            android:textSize="@dimen/text_Small_Size"
            android:gravity="center"/>

    </LinearLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="@dimen/_165sdp">

            <RelativeLayout
                android:id="@+id/sub_main_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:layout_marginRight="@dimen/_8sdp"
                    android:layout_marginBottom="@dimen/_12sdp"
                    app:cardElevation="4dp"
                    app:cardCornerRadius="5dp">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginTop="@dimen/_20sdp">

                        <ImageView
                            android:layout_width="@dimen/_70sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:src="@drawable/bg_event_type"
                            />

                        <TextView
                            android:id="@+id/tv_privacy"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorPrimary"
                            android:layout_centerInParent="true"
                            android:textSize="@dimen/text_Small_Size"/>

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_Small_Size"
                            android:textColor="@color/colorPrimary"
                            android:fontFamily="@font/nunito_regular"
                            android:layout_marginRight="@dimen/_75sdp"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_gravity="left"
                            android:text="Event Location"/>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:layout_marginLeft="@dimen/_8sdp">

                            <ImageView
                                android:layout_width="@dimen/_14sdp"
                                android:layout_height="@dimen/_14sdp"
                                android:src="@drawable/ico_event_loc"
                                android:layout_alignParentTop="true"
                                android:layout_marginTop="@dimen/_5sdp"/>

                            <TextView
                                android:id="@+id/tv_address"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/text_Small_Size"
                                android:textColor="@color/colorBlack"
                                android:ellipsize="end"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/_15sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:fontFamily="@font/nunito_regular"
                                android:layout_marginRight="@dimen/_60sdp" />

                        </RelativeLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:animateLayoutChanges="true"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="@dimen/_15sdp"
                                android:weightSum="2">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:layout_marginLeft="@dimen/_10sdp"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="@dimen/text_Small_Size"
                                        android:textColor="@color/colorPrimary"
                                        android:fontFamily="@font/nunito_regular"
                                        android:layout_gravity="left"
                                        android:maxLines="1"
                                        android:ellipsize="end"
                                        android:text="@string/event_start_date_time"/>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/_22sdp"
                                        android:layout_marginTop="@dimen/_5sdp"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:id="@+id/tv_day"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textSize="@dimen/text_Large_Size"
                                            android:textColor="@color/colorBlack"
                                            android:fontFamily="@font/nunito_regular"
                                            android:layout_gravity="center" />

                                        <TextView
                                            android:id="@+id/tv_start_th"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/nunito_regular"
                                            android:textSize="@dimen/text_Small_Size"
                                            android:textColor="@color/colorBlack"
                                            android:gravity="top" />
                                    </LinearLayout>

                                    <TextView
                                        android:id="@+id/tv_start_date_time"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="@dimen/_11ssp"
                                        android:textColor="@color/colorGray"
                                        android:fontFamily="@font/nunito_regular" />


                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/_15sdp"
                                        android:textSize="@dimen/text_Small_Size"
                                        android:textColor="@color/colorPrimary"
                                        android:fontFamily="@font/nunito_regular"
                                        android:layout_gravity="left"
                                        android:maxLines="1"
                                        android:ellipsize="end"
                                        android:text="Max. user limit"/>


                                    <TextView
                                        android:id="@+id/tv_max_user"
                                        android:layout_width="wrap_content"
                                        android:layout_height="@dimen/_25sdp"
                                        android:textSize="@dimen/text_Medium_Size"
                                        android:textColor="@color/colorBlack"
                                        android:layout_marginTop="@dimen/_2sdp"
                                        android:gravity="center"
                                        android:fontFamily="@font/nunito_regular"
                                        android:layout_gravity="start" />


                                    <TextView
                                        android:id="@+id/tv_joined_member_txt"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/_15sdp"
                                        android:textSize="@dimen/text_Small_Size"
                                        android:textColor="@color/colorPrimary"
                                        android:fontFamily="@font/nunito_regular"
                                        android:layout_gravity="left"
                                        android:maxLines="1"
                                        android:ellipsize="end"
                                        android:text="@string/joined_members"
                                        android:visibility="gone"/>

                                    <RelativeLayout
                                        android:id="@+id/ly_joined"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                       android:layout_marginTop="@dimen/_5sdp"
                                        android:orientation="horizontal">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">

                                        <android.support.v7.widget.RecyclerView
                                            android:id="@+id/rcv_joined_member"
                                            android:layout_width="wrap_content"
                                            android:layout_height="@dimen/_33sdp"
                                            android:divider="@null"
                                            android:layout_centerInParent="true"
                                            android:orientation="horizontal"
                                            android:visibility="gone"
                                            app:layoutManager="android.support.v7.widget.LinearLayoutManager" />


                                        <TextView
                                            android:id="@+id/tv_joined_count"
                                            android:layout_width="@dimen/_22sdp"
                                            android:layout_height="@dimen/_22sdp"
                                            android:background="@drawable/bg_circle"
                                            android:backgroundTint="@color/colorPrimary"
                                            android:fontFamily="@font/nunito_regular"
                                            android:gravity="center"
                                            android:layout_gravity="center"
                                            android:layout_centerVertical="true"
                                            android:textSize="@dimen/text_very_Small_Size"
                                            android:textColor="@color/colorWhite"
                                            android:visibility="gone"/>

                                    </LinearLayout>

                                        <RelativeLayout
                                            android:id="@+id/ly_join_member"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"/>


                                    </RelativeLayout>

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:layout_marginRight="@dimen/_10sdp"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="@dimen/text_Small_Size"
                                        android:textColor="@color/colorPrimary"
                                        android:fontFamily="@font/nunito_regular"
                                        android:layout_gravity="left"
                                        android:maxLines="1"
                                        android:ellipsize="end"
                                        android:text="@string/event_end_date_time"/>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/_22sdp"
                                        android:layout_marginTop="@dimen/_5sdp"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:id="@+id/tv_end_day"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textSize="@dimen/text_Large_Size"
                                            android:textColor="@color/colorBlack"
                                            android:fontFamily="@font/nunito_regular"
                                            android:layout_gravity="center" />

                                        <TextView
                                            android:id="@+id/tv_end_th"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/nunito_regular"
                                            android:textSize="@dimen/text_Small_Size"
                                            android:textColor="@color/colorBlack"
                                            android:gravity="top" />
                                    </LinearLayout>

                                    <TextView
                                        android:id="@+id/tv_end_date_time"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="@dimen/_11ssp"
                                        android:textColor="@color/colorGray"
                                        android:fontFamily="@font/nunito_regular" />


                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/_15sdp"
                                        android:textSize="@dimen/text_Small_Size"
                                        android:textColor="@color/colorPrimary"
                                        android:fontFamily="@font/nunito_regular"
                                        android:layout_gravity="left"
                                        android:maxLines="1"
                                        android:ellipsize="end"
                                        android:text="Who can join event"/>


                                    <TextView
                                        android:id="@+id/tv_gender"
                                        android:layout_width="wrap_content"
                                        android:layout_height="@dimen/_25sdp"
                                        android:textSize="@dimen/text_Small_Size"
                                        android:textColor="@color/colorBlack"
                                        android:fontFamily="@font/nunito_regular"
                                        android:gravity="center"
                                        android:layout_marginTop="@dimen/_2sdp"
                                        android:layout_gravity="start"/>


                                    <TextView
                                        android:id="@+id/tv_invite_member_txt"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/_15sdp"
                                        android:textSize="@dimen/text_Small_Size"
                                        android:textColor="@color/colorPrimary"
                                        android:fontFamily="@font/nunito_regular"
                                        android:layout_gravity="left"
                                        android:maxLines="1"
                                        android:ellipsize="end"
                                        android:text="@string/invited_members"
                                        android:visibility="gone"/>

                                    <RelativeLayout
                                        android:id="@+id/ly_invited"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/_5sdp"
                                        android:orientation="horizontal">

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:orientation="horizontal">

                                        <android.support.v7.widget.RecyclerView
                                            android:id="@+id/rcv_invite_member"
                                            android:layout_width="wrap_content"
                                            android:layout_height="@dimen/_33sdp"
                                            android:divider="@null"
                                            android:orientation="horizontal"
                                            android:layout_centerInParent="true"
                                            app:layoutManager="android.support.v7.widget.LinearLayoutManager"
                                            android:visibility="gone"/>

                                        <TextView
                                            android:id="@+id/tv_invite_count"
                                            android:layout_width="@dimen/_22sdp"
                                            android:layout_height="@dimen/_22sdp"
                                            android:background="@drawable/bg_circle"
                                            android:backgroundTint="@color/colorPrimary"
                                            android:fontFamily="@font/nunito_regular"
                                            android:gravity="center"
                                            android:layout_gravity="center"
                                            android:layout_centerVertical="true"
                                            android:textSize="@dimen/text_very_Small_Size"
                                            android:textColor="@color/colorWhite"
                                            android:visibility="gone"/>

                                        </LinearLayout>

                                        <RelativeLayout
                                            android:id="@+id/ly_invited_member"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"/>


                                    </RelativeLayout>




                                </LinearLayout>


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_marginBottom="@dimen/_10sdp"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tv_payment_status"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/text_Medium_Size"
                                    android:textColor="@color/colorPrimary"
                                    android:maxLines="1"
                                    android:layout_gravity="center"
                                    android:fontFamily="@font/nunito_regular"
                                    android:text="Paid"/>

                                <Space
                                    android:layout_width="@dimen/_5sdp"
                                    android:layout_height="match_parent" />

                                <TextView
                                    android:id="@+id/tv_paid_amount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/text_Large_Size"
                                    android:textColor="@color/colorPrimary"
                                    android:maxLines="1"
                                    android:gravity="center"
                                    android:layout_gravity="center"
                                    android:fontFamily="@font/nunito_semibold"
                                    />

                            </LinearLayout>

                        </LinearLayout>



                        <TextView
                            android:id="@+id/tv_join"
                            android:layout_width="@dimen/_90sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_gravity="center_horizontal"
                            android:background="@drawable/bg_login_btn"
                            android:fontFamily="@font/josefinsans_semibold"
                            android:text="Join Event"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginBottom="@dimen/_20sdp"
                            android:gravity="center"
                            android:textAllCaps="false"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/text_Large_Size"
                            android:visibility="gone"/>

                        <LinearLayout
                            android:id="@+id/ly_share_pay"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_marginBottom="15dp"
                            android:background="@color/colorWhite"
                            android:layout_centerInParent="true"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_share"
                                android:layout_width="@dimen/_90sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:layout_gravity="center_horizontal"
                                android:background="@drawable/bg_login_btn"
                                android:fontFamily="@font/josefinsans_semibold"
                                android:text="@string/share"
                                android:gravity="center"
                                android:textAllCaps="false"
                                android:textColor="@color/colorWhite"
                                android:textSize="@dimen/text_Large_Size"
                                android:visibility="gone"
                                />

                            <TextView
                                android:id="@+id/tv_pay"
                                android:layout_width="@dimen/_90sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:layout_gravity="center_horizontal"
                                android:background="@drawable/bg_login_btn"
                                android:fontFamily="@font/josefinsans_semibold"
                                android:text="@string/pay"
                                android:gravity="center"
                                android:textAllCaps="false"
                                android:textColor="@color/colorWhite"
                                android:textSize="@dimen/text_Large_Size"
                                android:visibility="gone"/>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ly_accept_reject"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_marginBottom="15dp"
                            android:background="@color/colorWhite"
                            android:layout_centerInParent="true"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <TextView
                                android:id="@+id/tv_accept"
                                android:layout_width="@dimen/_90sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:layout_gravity="center_horizontal"
                                android:background="@drawable/bg_login_btn"
                                android:fontFamily="@font/josefinsans_semibold"
                                android:text="Accept"
                                android:gravity="center"
                                android:textAllCaps="false"
                                android:textColor="@color/colorWhite"
                                android:textSize="@dimen/text_Large_Size" />

                            <Space
                                android:layout_width="@dimen/_10sdp"
                                android:layout_height="match_parent" />

                            <TextView
                                android:id="@+id/tv_reject"
                                android:layout_width="@dimen/_90sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:layout_gravity="center_horizontal"
                                android:background="@drawable/bg_login_btn"
                                android:fontFamily="@font/josefinsans_semibold"
                                android:text="Reject"
                                android:gravity="center"
                                android:textAllCaps="false"
                                android:textColor="@color/colorWhite"
                                android:textSize="@dimen/text_Large_Size" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ly_edit_delete"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:layout_gravity="bottom"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_30sdp"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <ImageView
                                android:id="@+id/iv_edit_profile"
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:src="@drawable/ico_event_edit" />

                            <ImageView
                                android:id="@+id/iv_delete_myevent"
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:src="@drawable/ico_event_delete"
                                android:layout_marginLeft="@dimen/_10sdp"/>

                        </LinearLayout>

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <View
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/circle_border"
                    android:layout_centerHorizontal="true"
                    android:elevation="@dimen/_10sdp"
                    />

            </RelativeLayout>

            <ImageView
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_25sdp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ico_event" />

            <android.support.v7.widget.CardView
                android:id="@+id/cv_companion_view"
                android:layout_below="@+id/sub_main_view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_100sdp"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_marginRight="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_12sdp"
                app:cardElevation="4dp"
                app:cardCornerRadius="5dp"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:text="Companion Member"
                        android:layout_gravity="center"
                        android:fontFamily="@font/josefinsans_semibold"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/_17ssp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height= "0.7dp"
                        android:background="@color/colorLightGray"
                        android:layout_marginLeft="@dimen/_15sdp"
                        android:layout_marginRight="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_10sdp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/rcv_companion"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_50sdp"
                            android:divider="@null"
                            android:orientation="horizontal"
                            android:layout_centerInParent="true"
                            app:layoutManager="android.support.v7.widget.LinearLayoutManager" />

                        <TextView
                            android:id="@+id/tv_comp_count"
                            android:layout_width="@dimen/_50sdp"
                            android:layout_height="@dimen/_50sdp"
                            android:fontFamily="@font/nunito_regular"
                            android:background="@drawable/bg_circle"
                            android:backgroundTint="@color/colorPrimary"
                            android:gravity="center"
                            android:layout_centerVertical="true"
                            android:textColor="@color/colorWhite"
                            android:text="+1"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:textSize="@dimen/text_Large_Size"
                            android:layout_gravity="center"/>

                    </LinearLayout>

                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/ly_companion"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>



            </android.support.v7.widget.CardView>

        </RelativeLayout>



    </android.support.v4.widget.NestedScrollView>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@drawable/header_bg">

        <TextView
            android:id="@+id/profile_action_bar"
