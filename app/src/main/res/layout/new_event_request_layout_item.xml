<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_5sdp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_2sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:elevation="@dimen/_10sdp"
            android:minHeight="@dimen/_140sdp"
            app:cardCornerRadius="@dimen/_10sdp">

            <LinearLayout
                android:id="@+id/ly_main_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_105sdp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_95sdp"
                        android:layout_marginRight="@dimen/_1sdp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_event_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nunito_bold"
                            android:maxLines="2"
                            android:text="Rachal smith New Event For All Girls And Boys"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/text_Medium_Size" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:elevation="@dimen/_8sdp"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="@dimen/_15sdp"
                                android:layout_height="@dimen/_15sdp"
                                android:layout_gravity="center"
                                android:src="@drawable/ico_event" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/_22sdp"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tv_day"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:fontFamily="@font/nunito_regular"
                                    android:text="00"
                                    android:textColor="@color/colorBlack"
                                    android:textSize="@dimen/Small_Size" />

                                <TextView
                                    android:id="@+id/tv_th"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/nunito_regular"
                                    android:gravity="top"
                                    android:text="th"
                                    android:textColor="@color/colorBlack"
                                    android:textSize="@dimen/text_very_Small_Size" />

                                <TextView
                                    android:id="@+id/tv_start_date_time"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="@dimen/_2sdp"
                                    android:fontFamily="@font/nunito_regular"
                                    android:gravity="center"
                                    android:text="March 2018"
                                    android:textColor="@color/colorBlack"
                                    android:textSize="@dimen/Small_Size" />


                            </LinearLayout>


                            <View
                                android:layout_width="0.8dp"
                                android:layout_height="@dimen/_17sdp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="@dimen/_8sdp"
                                android:layout_marginRight="@dimen/_8sdp"
                                android:background="@color/very_very_light_gray" />

                            <ImageView
                                android:layout_width="@dimen/_15sdp"
                                android:layout_height="@dimen/_15sdp"
                                android:layout_gravity="center"
                                android:src="@drawable/ico_app_time"
                                android:tint="@color/colorPrimary" />

                            <TextView
                                android:id="@+id/tv_time"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_alignParentEnd="true"
                                android:layout_centerInParent="true"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:fontFamily="@font/nunito_regular"
                                android:gravity="center|left"
                                android:maxLines="1"
                                android:text="00:00 PM"
                                android:textColor="@color/black"
                                android:textSize="@dimen/Small_Size" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="@dimen/_17sdp"
                                android:layout_height="@dimen/_17sdp"
                                android:layout_gravity="center|top"
                                android:layout_marginTop="@dimen/_2sdp"
                                android:src="@drawable/placeholder"
                                android:tint="@color/colorPrimary" />


                            <TextView
                                android:id="@+id/tv_address"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="top"
                                android:layout_marginLeft="@dimen/_3sdp"
                                android:ellipsize="end"
                                android:fontFamily="@font/nunito_regular"
                                android:gravity="top"
                                android:maxLines="1"
                                android:text="502 mindiii system pvt limited piplihana, Indore "
                                android:textColor="@color/colorGray"
                                android:textSize="@dimen/Small_Size" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_privacy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="left|center"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:elevation="@dimen/_5sdp"
                        android:fontFamily="@font/nunito_regular"
                        android:gravity="center"
                        android:maxLines="1"
                        android:text="Public"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/text_Medium_Size" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:gravity="right"
                        android:orientation="vertical">


                        <TextView
                            android:id="@+id/event_status"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerInParent="true"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:fontFamily="@font/nunito_regular"
                            android:maxLines="1"
                            android:text="Event passed"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/text_Medium_Size"
                            android:visibility="gone" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:gravity="right"
                            android:orientation="horizontal">


                            <TextView
                                android:id="@+id/tv_payment_status"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/nunito_regular"
                                android:maxLines="1"
                                android:text="Paid"
                                android:textColor="@color/colorBlack"
                                android:textSize="@dimen/text_Medium_Size" />

                            <Space
                                android:layout_width="@dimen/_5sdp"
                                android:layout_height="match_parent" />

                            <TextView
                                android:id="@+id/tv_paid_amount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/nunito_semibold"
                                android:maxLines="1"
                                android:text="$000"
                                android:textColor="@color/colorPrimary"
                                android:textSize="@dimen/text_Medium_Size" />

                        </LinearLayout>


                    </LinearLayout>

                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:gravity="right">

                    <com.github.captain_miao.optroundcardview.OptRoundCardView
                        android:id="@+id/top_card_view"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="right"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:elevation="@dimen/_10sdp"
                        app:optRoundCardBottomEdges="false"
                        app:optRoundCardCornerRadius="10dp"
                        app:optRoundCardElevation="@dimen/_8sdp"
                        app:optRoundCardLeftBottomCorner="false"
                        app:optRoundCardRightTopCorner="false">


                        <LinearLayout
                            android:id="@+id/ly_edit_delete"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentEnd="true"
                            android:layout_centerInParent="true"
                            android:elevation="@dimen/_10sdp"
                            android:gravity="center"
                            android:layout_marginLeft="@dimen/_12sdp"
                            android:layout_marginRight="@dimen/_12sdp"
                            android:orientation="horizontal">


                            <LinearLayout
                                android:id="@+id/ly_edit_event"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="@dimen/_18sdp"
                                    android:layout_height="@dimen/_18sdp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/edit"
                                    android:tint="@color/colorGray" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_alignParentEnd="true"
                                    android:layout_centerInParent="true"
                                    android:layout_marginLeft="@dimen/_5sdp"
                                    android:fontFamily="@font/nunito_regular"
                                    android:gravity="center"
                                    android:maxLines="1"
                                    android:text="Edit"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/text_Small_Size" />


                                <View
                                    android:layout_width="0.8dp"
                                    android:layout_height="@dimen/_20sdp"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="@dimen/_10sdp"
                                    android:layout_marginRight="@dimen/_10sdp"
                                    android:background="@color/very_very_light_gray" />


                            </LinearLayout>


                            <LinearLayout
                                android:id="@+id/ly_delete_myevent"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <ImageView

                                    android:layout_width="@dimen/_18sdp"
                                    android:layout_height="@dimen/_18sdp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ico_event_delete" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_alignParentEnd="true"
                                    android:layout_centerInParent="true"
                                    android:layout_marginLeft="@dimen/_5sdp"
                                    android:layout_marginRight="@dimen/_5sdp"
                                    android:fontFamily="@font/nunito_regular"
                                    android:gravity="center"
                                    android:maxLines="1"
                                    android:text="Delete"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/text_Small_Size" />


                            </LinearLayout>


                        </LinearLayout>


                    </com.github.captain_miao.optroundcardview.OptRoundCardView>




                </RelativeLayout>


            </LinearLayout>


        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/event_imdsg"
            android:layout_width="@dimen/_95sdp"
            android:layout_height="@dimen/_100sdp"
            android:elevation="@dimen/_4sdp"
            app:cardCornerRadius="@dimen/_8sdp"
            android:layout_marginLeft="@dimen/_3sdp"
            app:cardElevation="@dimen/_4sdp">

            <com.github.siyamed.shapeimageview.RoundedImageView
                android:id="@+id/event_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/placeholder_chat_image"
                app:siRadius="@dimen/_8sdp" />


        </android.support.v7.widget.CardView>

    </RelativeLayout>


</RelativeLayout>
