<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.apoim.activity.SubscriptionPayActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="@drawable/header_bg">

            <TextView
                android:id="@+id/profile_action_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="Payment"
                android:fontFamily="@font/josefinsans_semibold"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_18ssp" />

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ico_back"
                android:tint="@color/colorPrimary"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_10sdp" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:animateLayoutChanges="true"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select your payment method"
                android:gravity="center"
                android:fontFamily="@font/nunito_regular"
                android:textSize="@dimen/text_Medium_Size"
                android:layout_marginTop="@dimen/_10sdp"
                android:textColor="@color/colorBlack"
                android:visibility="gone"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_60sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <android.support.v7.widget.CardView
                    android:id="@+id/cv_card"
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="match_parent"
                    app:cardMaxElevation="@dimen/_5sdp"
                    app:cardCornerRadius="@dimen/_5sdp"
                    android:elevation="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:layout_marginLeft="@dimen/_6sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_6sdp"
                    app:cardBackgroundColor="@color/colorPrimaryDark">

                    <ImageView
                        android:id="@+id/iv_card_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ico_c_card_active"
                        android:layout_gravity="center"/>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/cv_stripe"
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="match_parent"
                    app:cardMaxElevation="@dimen/_5sdp"
                    app:cardCornerRadius="@dimen/_5sdp"
                    android:elevation="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_6sdp"
                    android:layout_marginBottom="@dimen/_6sdp"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/iv_stripe_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ico_stripe"
                        android:layout_gravity="center"/>

                </android.support.v7.widget.CardView>

            </LinearLayout>





            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_credit_card"
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Credit Card"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_Small_Size"
                    android:fontFamily="@font/nunito_regular" />

                <TextView
                    android:id="@+id/tv_stripe"
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Stripe"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/text_Small_Size"
                    android:fontFamily="@font/nunito_regular"
                    android:visibility="gone"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ly_card"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_205sdp"
                android:layout_marginRight="@dimen/_30sdp"
                android:layout_marginLeft="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_15sdp"
                android:orientation="vertical"
                android:paddingLeft="@dimen/_20sdp"
                android:paddingRight="@dimen/_20sdp"
                android:background="@drawable/bg_card">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Card Number"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/text_Medium_Size"
                    android:fontFamily="@font/nunito_regular"/>

                <EditText
                    android:id="@+id/ed_card_num"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_27sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:padding="@dimen/_5sdp"
                    android:inputType="number"
                    android:textSize="@dimen/text_Small_Size"
                    android:textColor="@color/colorWhite"
                    android:fontFamily="@font/nunito_regular"
                    android:maxLines="1"
                    android:maxLength="19"
                    android:imeOptions="actionDone"
                    android:background="@drawable/rectangular_border"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Expires"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/text_Medium_Size"
                            android:fontFamily="@font/nunito_regular"/>

                        <TextView
                            android:id="@+id/tv_month"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_27sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:padding="@dimen/_5sdp"
                            android:maxLines="1"
                            android:gravity="center"
                            android:textSize="@dimen/text_Small_Size"
                            android:textColor="@color/colorWhite"
                            android:fontFamily="@font/nunito_regular"
                            android:background="@drawable/rectangular_border"/>

                    </LinearLayout>


                    <TextView
                        android:id="@+id/tv_year"
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="@dimen/_27sdp"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:padding="@dimen/_5sdp"
                        android:maxLines="1"
                        android:gravity="center"
                        android:textSize="@dimen/text_Small_Size"
                        android:textColor="@color/colorWhite"
                        android:fontFamily="@font/nunito_regular"
                        android:background="@drawable/rectangular_border"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:gravity="right"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="wrap_content"
                            android:text="CVV"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/text_Medium_Size"
                            android:fontFamily="@font/nunito_regular"/>

                        <EditText
                            android:id="@+id/ed_cvv"
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="@dimen/_27sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:padding="@dimen/_5sdp"
                            android:textSize="@dimen/text_Small_Size"
                            android:maxLines="1"
                            android:gravity="center"
                            android:inputType="number"
                            android:maxLength="4"
                            android:imeOptions="actionDone"
                            android:textColor="@color/colorWhite"
                            android:fontFamily="@font/nunito_regular"
                            android:background="@drawable/rectangular_border"/>

                    </LinearLayout>

                </LinearLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Card Holder Name"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/text_Medium_Size"
                    android:fontFamily="@font/nunito_regular"/>

                <EditText
                    android:id="@+id/ed_card_holder_name"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_27sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:padding="@dimen/_5sdp"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:imeOptions="actionDone"
                    android:textSize="@dimen/text_Small_Size"
                    android:textColor="@color/colorWhite"
                    android:fontFamily="@font/nunito_regular"
                    android:background="@drawable/rectangular_border"/>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/ly_stripe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Enter your stripe email id to  receiving payment in your stripe account"
                    android:gravity="center"
                    android:fontFamily="@font/nunito_regular"
                    android:textSize="@dimen/text_Medium_Size"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:textColor="@color/colorBlack"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:background="@null"
                    android:maxLines="1"
                    android:fontFamily="@font/nunito_light"
                    android:hint="Enter paypal email id"
                    android:imeOptions="actionNext"
                    android:inputType="textPassword"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/text_Medium_Size" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@color/colorBlack" />

            </LinearLayout>


            <TextView
                android:id="@+id/tv_pay"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/bg_login_btn"
                android:backgroundTint="@color/colorPrimaryDark"
                android:fontFamily="@font/josefinsans_semibold"
                android:layout_marginLeft="@dimen/_30sdp"
                android:layout_marginRight="@dimen/_30sdp"
                android:layout_marginBottom="@dimen/_35sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:gravity="center"
                android:maxLines="1"
                android:maxLength="26"
                android:text="Pay $5"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/text_Large_Size" />

        </LinearLayout>

    </LinearLayout>

    <com.apoim.util.InsLoadingView
        android:id="@+id/loading_view"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_60sdp"
        android:src="@drawable/app_icon"
        android:layout_centerInParent="true"
        android:clickable="false"
        android:visibility="gone"/>

</RelativeLayout>
