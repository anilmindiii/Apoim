<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/annonce.main.coordinator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="RtlHardcoded"
    >

    <android.support.design.widget.AppBarLayout
        android:id="@+id/flexible.example.appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/flexible.example.collapsing"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            app:title="@string/app_name"
            android:background="@color/white"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:expandedTitleTextAppearance="@style/CollapsingTextAppearance.Inverse"
            app:contentScrim="@color/colorWhite">


            <ImageView
                android:id="@+id/iv_profile"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_230sdp"
                android:src="@drawable/ico_user_placeholder"
                android:background="@color/black"
                android:scaleType="centerCrop" />


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_230sdp"
                android:background="@drawable/transparent_shadow"/>


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_120sdp"
                android:layout_gravity="bottom"
                android:background="@color/colorWhite"/>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="bottom"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:background="@drawable/shadow">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_marginLeft="@dimen/_10sdp">

                    <TextView
                        android:id="@+id/tv_fullName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:ellipsize="end"
                        android:fontFamily="@font/josefinsans_semibold"
                        android:gravity="center"
                        android:maxLines="1"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/text_XLarge_Size" />
                    <TextView
                        android:id="@+id/tv_age"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:maxLines="1"
                        android:maxLength="4"
                        android:textSize="@dimen/text_Large_Size"
                        android:textColor="@color/colorBlack"
                        android:layout_marginRight="@dimen/_2sdp"
                        android:layout_gravity="center"
                        android:fontFamily="@font/josefinsans_semibold" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/text_Small_Size"
                    android:layout_marginLeft="@dimen/_12sdp"
                    android:fontFamily="@font/nunito_regular"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <LinearLayout
                        android:id="@+id/ly_friends"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:src="@drawable/ico_add_friend"/>

                        <TextView
                            android:id="@+id/tv_friendstxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textSize="@dimen/text_Small_Size"
                            android:fontFamily="@font/nunito_regular"
                            android:textColor="@color/colorBlack"
                            android:text="Respond"/>

                    </LinearLayout>

                    <View
                        android:layout_width="0.7dp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_gravity="center"
                        android:background="@color/mdtp_line_background"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:src="@drawable/ico_favourite"/>

                        <TextView
                            android:id="@+id/tv_likestxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textSize="@dimen/text_Small_Size"
                            android:fontFamily="@font/nunito_regular"
                            android:textColor="@color/colorBlack"
                            android:text="Add favourite"/>

                    </LinearLayout>

                    <View
                        android:layout_width="0.7dp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_gravity="center"
                        android:background="@color/mdtp_line_background"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        android:layout_weight="1">


                        <ImageView
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:src="@drawable/ico_share"/>

                        <TextView
                            android:id="@+id/tv_visittxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textSize="@dimen/text_Small_Size"
                            android:fontFamily="@font/nunito_regular"
                            android:textColor="@color/colorBlack"
                            android:text="Share Paofile"/>

                    </LinearLayout>

                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/mdtp_line_background"/>

                <LinearLayout
                    android:id="@+id/ly_request_accept_reject"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:ellipsize="end"
                        android:fontFamily="@font/nunito_semibold"
                        android:gravity="center"
                        android:maxLines="1"
                        android:text="Sent you a friend request"
                        android:textColor="@color/colorGray"
                        android:textSize="@dimen/text_Small_Size" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_27sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_25sdp"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <TextView
                                android:id="@+id/tv_remove_friend"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginLeft="@dimen/_15sdp"
                                android:layout_marginRight="@dimen/_15sdp"
                                android:layout_weight="1"
                                android:backgroundTint="@color/colorLightGray"
                                android:background="@drawable/bg_login_btn"
                                android:fontFamily="@font/josefinsans_semibold"
                                android:gravity="center"
                                android:text="Reject"
                                android:textAllCaps="false"
                                android:textColor="@color/colorBlack"
                                android:textSize="@dimen/text_Medium_Size" />

                            <TextView
                                android:id="@+id/tv_accept_friend"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginLeft="@dimen/_15sdp"
                                android:layout_marginRight="@dimen/_15sdp"
                                android:layout_weight="1"
                                android:background="@drawable/bg_login_btn"
                                android:fontFamily="@font/josefinsans_semibold"
                                android:gravity="center"
                                android:text="Accept"
                                android:textAllCaps="false"
                                android:textColor="@color/colorWhite"
                                android:textSize="@dimen/text_Medium_Size" />

                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/mdtp_line_background"/>


                </LinearLayout>

            </LinearLayout>



        </android.support.design.widget.CollapsingToolbarLayout>


    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:background="@drawable/shadow">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/_30sdp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:nestedScrollingEnabled="false"
                android:orientation="vertical">

                <include
                    android:id="@+id/ly_more_info"
                    layout="@layout/new_profile_more_info_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_30sdp"
                    android:visibility="gone" />

                <include
                    android:id="@+id/ly_basic_info"
                    layout="@layout/new_profile_basic_info_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="visible" />

            </LinearLayout>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>



    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        app:layout_anchor="@+id/flexible.example.appbar"
        app:layout_anchorGravity="bottom"
        app:layout_collapseMode="pin"
        android:background="@drawable/shadow"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        app:theme="@style/ThemeOverlay.AppCompat.Light">

    </View>


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        app:layout_anchor="@+id/flexible.example.appbar"
        app:layout_anchorGravity="bottom"
        app:layout_collapseMode="pin"
        android:background="@color/white"
        android:layout_marginRight="@dimen/_14sdp"
        android:layout_marginLeft="@dimen/_14sdp"
        app:theme="@style/ThemeOverlay.AppCompat.Light">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="2">

            <TextView
                android:id="@+id/tv_basic_info"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:fontFamily="@font/nunito_bold"
                android:gravity="center"
                android:text="Basic Info"
                android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/text_Large_Size" />

            <View
                android:layout_width="0.7dp"
                android:layout_height="@dimen/_25sdp"
                android:layout_gravity="center"
                android:background="@color/mdtp_line_background" />

            <TextView
                android:id="@+id/tv_more_info"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:fontFamily="@font/nunito_bold"
                android:gravity="center"
                android:text="More Info"
                android:textColor="@color/colorGray"
                android:textSize="@dimen/text_Large_Size" />




        </LinearLayout>


    </android.support.v7.widget.Toolbar>

    <com.apoim.util.InsLoadingView
        android:id="@+id/loading_view"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_60sdp"
        android:src="@drawable/app_icon"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_197sdp"
        android:elevation="@dimen/_6sdp"
        android:visibility="gone"/>

</android.support.design.widget.CoordinatorLayout>
