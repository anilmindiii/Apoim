<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_5sdp"
    android:layout_marginBottom="@dimen/_10sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_days_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/bg_google_plus_btn"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:padding="@dimen/_5sdp"
        android:layout_margin="@dimen/_15sdp"
        android:minWidth="@dimen/_100sdp"
        android:textColor="@color/colorWhite"
        android:backgroundTint="@color/grey"
        android:textSize="@dimen/text_Small_Size"
        android:fontFamily="@font/josefinsans_regular"
        android:text="asasaasa"
        android:visibility="gone"
        />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">



            <TextView
                android:id="@+id/my_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                android:layout_gravity="center"
                android:text="Hello Anil Chourasiya "
                android:gravity="center|left"
                android:paddingRight="@dimen/_14sdp"
                android:paddingTop="@dimen/_5sdp"
                android:paddingBottom="@dimen/_10sdp"
                android:paddingLeft="@dimen/_14sdp"
                android:layout_marginLeft="@dimen/_35sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="@dimen/_5sdp"
                android:textSize="@dimen/_12sdp"
                android:fontFamily="@font/nunito_regular"
                android:background="@drawable/rounded_primary_right_chat_border" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/ly_my_image_view"
            android:layout_width="@dimen/_190sdp"
            android:layout_height="@dimen/_190sdp"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/_35sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:visibility="gone">


            <com.github.siyamed.shapeimageview.RoundedImageView
                android:id="@+id/iv_my_side_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ico_user_placeholder"
                app:siRadius="@dimen/_5sdp"
                app:siBorderWidth="1dp"
                app:siBorderColor="@color/white"
                app:siSquare="true"
                />

            <ProgressBar
                android:id="@+id/my_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:visibility="gone"/>

        </RelativeLayout>



    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="right"
        android:gravity="right"
        android:weightSum="2">

        <ImageView
            android:id="@+id/iv_msg_tick"
            android:layout_width="@dimen/_16sdp"
            android:layout_height="@dimen/_16sdp"
            android:src="@drawable/ico_msg_sent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_gravity="right" />


        <TextView
            android:id="@+id/my_date_time_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="25/12/2017 800 pm"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/_10sdp"
            android:layout_gravity="right"
            android:gravity="right|top"
            android:layout_marginTop="@dimen/_2sdp"
            android:fontFamily="@font/nunito_regular"
            android:layout_marginRight="@dimen/_7sdp" />

    </LinearLayout>




</LinearLayout>
