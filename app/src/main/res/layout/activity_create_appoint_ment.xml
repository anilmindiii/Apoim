<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:layout_scrollFlags="scroll|exitUntilCollapsed"
    tools:context=".activity.CreateAppointMentActivity">



    <fragment
        android:id="@+id/map"
        android:layout_marginTop="?actionBarSize"
        android:name="com.google.android.gms.maps.MapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </fragment>


    <android.support.v4.widget.NestedScrollView
        android:id="@+id/bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:behavior_peekHeight="220dp"
        android:clipToPadding="false"
        android:paddingBottom="@dimen/_10sdp"
        app:layout_behavior="@string/bottom_sheet_behavior"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/profile_horizontal_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:scrollbars="none"
                android:nestedScrollingEnabled="false"
                android:layout_marginBottom="@dimen/_4sdp"
                app:layoutManager="android.support.v7.widget.LinearLayoutManager" />


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_marginLeft="@dimen/_15sdp"
                android:elevation="@dimen/_5sdp"
                app:cardElevation="@dimen/_5sdp"
                app:cardCornerRadius="@dimen/_5sdp"
                android:layout_alignParentBottom="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_15sdp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/iv_user_image"
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_gravity="center"
                            android:src="@drawable/ico_user_placeholder"
                            app:civ_border_color="@color/mdtp_dark_gray"
                            app:civ_border_width="0.5dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginRight="@dimen/_1sdp"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="@dimen/_2sdp">

                            <TextView
                                android:id="@+id/tv_user_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:fontFamily="@font/nunito_regular"
                                android:gravity="center|start"
                                android:maxLines="1"
                                android:text="Vironica "
                                android:textColor="@color/colorBlack"
                                android:textSize="@dimen/text_Medium_Size" />

                            <TextView
                                android:id="@+id/tv_favorite_work"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:fontFamily="@font/nunito_regular"
                                android:gravity="bottom"
                                android:maxLines="1"
                                android:text="student"
                                android:textColor="@color/colorGray"
                                android:textSize="@dimen/text_Small_Size"
                                android:visibility="gone"/>

                            <RatingBar
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/ratingBar"
                                style="?android:attr/ratingBarStyleSmall"
                                android:progressTint="@color/coloryellow"
                                android:rating="5"
                                android:layout_gravity="start"
                                android:gravity="bottom"
                                android:transformPivotX="0dp"
                                android:transformPivotY="0dp"
                                android:max="5"/>

                        </LinearLayout>


                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp">

                        <TextView
                            android:id="@+id/tv_date_time"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:hint="@string/meeting_date_and_time"
                            android:textColor="@color/colorBlack"
                            android:background="@null"
                            android:inputType="text"
                            android:gravity="center|start"
                            android:fontFamily="@font/nunito_regular"
                            android:textSize="@dimen/text_Small_Size"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1sdp"
                            android:layout_alignParentBottom="true"
                            android:background="@color/colorGray"/>



                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/ly_offer_price"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp">

                        <EditText
                            android:id="@+id/ed_offer_price"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:hint="Offer Price"
                            android:textColor="@color/colorBlack"
                            android:background="@null"
                            android:maxLength="6"
                            android:inputType="numberDecimal"
                            android:gravity="center|start"
                            android:fontFamily="@font/nunito_regular"
                            android:textSize="@dimen/text_Small_Size"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1sdp"
                            android:layout_alignParentBottom="true"
                            android:background="@color/colorGray"/>

                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/ly_location"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_location"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/enter_meeting_location"
                            android:textColor="@color/colorBlack"
                            android:background="@null"
                            android:gravity="center|start"
                            android:fontFamily="@font/nunito_regular"
                            android:textSize="@dimen/text_Small_Size"/>


                        <TextView
                            android:id="@+id/tv_distance"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorBlack"
                            android:background="@null"
                            android:maxLines="1"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentRight="true"
                            android:gravity="bottom|end"
                            android:fontFamily="@font/nunito_regular"
                            android:textSize="@dimen/text_Small_Size"/>


                    </LinearLayout>



                    <LinearLayout
                        android:id="@+id/ly_is_buz_added"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <RelativeLayout
                            android:layout_width="@dimen/_75sdp"
                            android:layout_height="@dimen/_75sdp">

                            <com.github.siyamed.shapeimageview.RoundedImageView
                                android:id="@+id/iv_buz_image"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/hotel"
                                android:layout_margin="0.5dp"
                                app:siRadius="@dimen/_3sdp" />




                        </RelativeLayout>



                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_8sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_buz_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/nunito_bold"
                                android:maxLines="1"
                                android:text="Rachal smith"
                                android:textColor="@color/colorBlack"
                                android:textSize="@dimen/text_Small_Size" />



                            <TextView
                                android:id="@+id/tv_buz_location"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/nunito_regular"
                                android:maxLines="2"
                                android:text="mindiii system pvt limited piplihana, Indore "
                                android:textColor="@color/colorGray"
                                android:textSize="@dimen/text_Small_Size" />

                            <TextView
                                android:id="@+id/tv_buz_distance"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/nunito_semibold"
                                android:text="5 Km"
                                android:maxLines="1"
                                android:textColor="@color/colorBlack"
                                android:textSize="@dimen/text_Small_Size" />


                        </LinearLayout>

                    </LinearLayout>




                    <TextView
                        android:id="@+id/sendRequestBtn"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:gravity="center"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/bg_login_btn"
                        android:fontFamily="@font/josefinsans_semibold"
                        android:text="@string/send_request"
                        android:textAllCaps="false"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/text_Large_Size" />
                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@drawable/header_bg">

        <TextView
            android:id="@+id/profile_action_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="Create Appointment"
            android:fontFamily="@font/josefinsans_semibold"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_18ssp" />

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ico_back"
            android:tint="@color/colorPrimary"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_10sdp"/>
    </RelativeLayout>

    <com.apoim.util.InsLoadingView
        android:id="@+id/loading_view"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_60sdp"
        android:src="@drawable/app_icon"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:visibility="gone"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?actionBarSize">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/_15sdp"
            app:cardCornerRadius="@dimen/_20sdp"
            android:id="@+id/card"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:layout_height="@dimen/_38sdp">

            <RelativeLayout
                android:layout_width="wrap_content"

                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/edt_location"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:hint="@string/search_by_location"
                    android:maxLines="2"
                    android:layout_marginRight="@dimen/_30sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:fontFamily="@font/nunito_regular"
                    android:background="@null"
                    android:clickable="true"
                    android:gravity="center|start"
                    android:paddingBottom="@dimen/_3sdp"
                    android:paddingLeft="@dimen/_5sdp"
                    android:paddingRight="@dimen/_5sdp"
                    android:paddingTop="@dimen/_3sdp"
                    android:dropDownHeight="@dimen/_170sdp"
                    android:textColor="@color/colorBlack"
                    android:textColorHint="@color/colorGray"
                    android:textSize="@dimen/text_Small_Size"
                    android:focusable="true"
                    android:enabled="false" />

                <LinearLayout
                    android:id="@+id/place_outo_completer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:alpha="0.0">

                    <fragment
                        android:id="@+id/place_autocomplete_fragment"
                        android:name="com.google.android.gms.location.places.ui.PlaceAutocompleteFragment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        />
                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_search"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/search_icon"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_alignParentEnd="true" />


            </RelativeLayout>



        </android.support.v7.widget.CardView>



    </RelativeLayout>


</android.support.design.widget.CoordinatorLayout>