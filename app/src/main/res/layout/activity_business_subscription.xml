<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.apoim.activity.business.BusinessSubscriptionActivity">

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ico_back"
        android:tint="@color/colorPrimary"
        android:layout_margin="@dimen/_10sdp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/skip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        android:gravity="right"
        android:layout_gravity="right"
        android:layout_alignParentRight="true"
        android:fontFamily="@font/nunito_regular"
        android:text="@string/profile_skip"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/_16ssp" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_30sdp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Get Subscription"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/text_XXLarge_Size"
                android:fontFamily="@font/nunito_bold"
                android:layout_gravity="center"
                android:gravity="center" />

            <ImageView
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_80sdp"
                android:layout_marginTop="@dimen/_60sdp"
                android:src="@drawable/profits"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Promote Your Business"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/text_XLarge_Size"
                android:fontFamily="@font/nunito_regular"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="@dimen/_30sdp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="$ 50 / month"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/text_XXLarge_Size"
                android:fontFamily="@font/nunito_bold"
                android:layout_gravity="center"
                android:gravity="center" />

            <TextView
                android:id="@+id/text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:text="@string/Promote_your_business_and_users"
                android:textColor="@color/colorGray"
                android:textSize="@dimen/text_Medium_Size"
                android:fontFamily="@font/nunito_regular"
                android:layout_gravity="center"
                android:gravity="center" />

            <TextView
                android:id="@+id/tv_subscription"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_30sdp"
                android:background="@drawable/bg_login_btn"
                android:fontFamily="@font/josefinsans_semibold"
                android:text="@string/subscribe"
                android:textAllCaps="false"
                android:gravity="center"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/text_Large_Size" />

        </LinearLayout>

    </ScrollView>


    <com.apoim.util.InsLoadingView
        android:id="@+id/loadingView"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_60sdp"
        android:src="@drawable/app_icon"
        android:layout_centerInParent="true"
        android:clickable="false"
        android:visibility="gone"/>




</RelativeLayout>
