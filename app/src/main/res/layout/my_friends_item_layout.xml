<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_75sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_profile"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            app:civ_border_color="@color/mdtp_dark_gray"
            app:civ_border_width="0.5dp"
            android:src="@drawable/ico_user_placeholder"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/_6sdp"
            android:layout_marginRight="@dimen/_36sdp"
            android:padding="@dimen/_2sdp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center|start"
                android:layout_gravity="start"
                android:text="Vironica"
                android:fontFamily="@font/nunito_regular"
                android:maxLines="1"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/text_Medium_Size"/>

            <TextView
                android:id="@+id/tv_work"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_regular"
                android:text="student"
                android:maxLines="1"
                android:layout_gravity="bottom"
                android:gravity="bottom"
                android:textColor="@color/colorGray"
                android:textSize="@dimen/text_Small_Size"/>

        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:id="@+id/ly_aceept_reject_layout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/_10sdp"
        android:gravity="right|center"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_accept"
            android:layout_width="@dimen/_22sdp"
            android:layout_height="@dimen/_22sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:src="@drawable/ico_accept_friend" />

        <ImageView
            android:id="@+id/iv_reject"
            android:layout_width="@dimen/_22sdp"
            android:layout_height="@dimen/_22sdp"
            android:layout_margin="@dimen/_2sdp"
            android:src="@drawable/ico_cancel_friend"/>

    </LinearLayout>


    <ImageView
        android:id="@+id/iv_remove_friend"
        android:layout_width="@dimen/_23sdp"
        android:layout_height="@dimen/_23sdp"
        android:src="@drawable/ico_cancel_friend"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:layout_marginRight="@dimen/_15sdp"
        android:visibility="gone"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorLightGray"
        android:layout_marginLeft="@dimen/_60sdp"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>
