<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_225sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_60sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/circle_solid_gray"
            android:layout_centerHorizontal="true"
            />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_183sdp"
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            app:cardElevation="4dp"
            app:cardCornerRadius="5dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="@dimen/_20sdp">

                <ImageView
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:src="@drawable/bg_event_type"
                    />

                <TextView
                    android:id="@+id/tv_privacy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/s_private"
                    android:textColor="@color/colorPrimary"
                    android:layout_centerInParent="true"
                    android:textSize="@dimen/text_Small_Size"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_22sdp"
                    android:layout_marginRight="@dimen/_75sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_day"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_Medium_Size"
                        android:textColor="@color/colorBlack"
                        android:fontFamily="@font/nunito_regular"
                        android:layout_gravity="center"
                        android:text="20"/>

                    <TextView
                        android:id="@+id/tv_th"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunito_regular"
                        android:textSize="@dimen/text_very_Small_Size"
                        android:textColor="@color/colorBlack"
                        android:gravity="top"
                        android:text="th"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_start_date_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_Small_Size"
                    android:textColor="@color/colorGray"
                    android:fontFamily="@font/nunito_regular"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:text="March 2018,03:00 PM"/>

                <TextView
                    android:id="@+id/tv_event_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_Medium_Size"
                    android:textColor="@color/colorBlack"
                    android:maxLines="1"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:fontFamily="@font/nunito_semibold"
                    android:text="Celebrate Overwatch's One-Year "/>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_8sdp">

                    <ImageView
                        android:layout_width="@dimen/_16sdp"
                        android:layout_height="@dimen/_16sdp"
                        android:src="@drawable/ico_event_loc"
                        android:layout_centerVertical="true"/>

                    <TextView
                        android:id="@+id/tv_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_Small_Size"
                        android:textColor="@color/colorGray"
                        android:maxLines="1"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:fontFamily="@font/nunito_regular"
                        android:text="502,krishana tower mindiii system pvt limited"/>

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_payment_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_Medium_Size"
                        android:textColor="@color/colorPrimary"
                        android:maxLines="2"
                        android:fontFamily="@font/nunito_regular"
                        android:text="Paid"/>

                    <Space
                        android:layout_width="@dimen/_5sdp"
                        android:layout_height="match_parent" />

                    <TextView
                        android:id="@+id/tv_paid_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_Medium_Size"
                        android:textColor="@color/colorPrimary"
                        android:maxLines="1"
                        android:fontFamily="@font/nunito_semibold"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:text="$150"/>

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentBottom="true"
                    android:gravity="right">

                    <TextView
                        android:id="@+id/event_status"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_Medium_Size"
                        android:textColor="@color/colorPrimary"
                        android:maxLines="1"
                        android:layout_centerInParent="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:fontFamily="@font/nunito_regular"
                        android:text="Event passed"
                        android:visibility="gone"/>

                    <LinearLayout
                        android:id="@+id/ly_edit_delete"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_alignParentEnd="true"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iv_edit_event"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:src="@drawable/ico_event_edit" />

                        <ImageView
                            android:id="@+id/iv_delete_myevent"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:src="@drawable/ico_event_delete"
                            android:layout_marginLeft="@dimen/_10sdp"/>

                    </LinearLayout>

                </RelativeLayout>




            </LinearLayout>


        </android.support.v7.widget.CardView>


        <View
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_60sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/circle_border"
            android:layout_centerHorizontal="true"
            android:elevation="@dimen/_10sdp"
            />

    </RelativeLayout>

    <ImageView
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ico_event"

        />



</RelativeLayout>
