<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.apoim.activity.SelectPaymentTypeActivity">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@drawable/header_bg">

        <TextView
            android:id="@+id/profile_action_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="Payment"
            android:fontFamily="@font/josefinsans_semibold"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_18ssp" />

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ico_back"
            android:tint="@color/colorPrimary"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_10sdp"/>

    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100sdp"
        android:src="@drawable/ico_select_payment"
        android:layout_marginTop="@dimen/_65sdp"
        android:contentDescription="this is icon for payment screen" />

    <android.support.v7.widget.CardView
        android:id="@+id/cv_pay_for_appointment"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp"
        android:layout_marginTop="@dimen/_25sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        app:cardBackgroundColor="@color/colorPrimary"
        app:cardCornerRadius="@dimen/_5sdp"
        app:cardElevation="@dimen/_5sdp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Pay for appointment"
            android:gravity="center|start"
            android:fontFamily="@font/nunito_regular"
            android:layout_marginLeft="@dimen/_10sdp"
            android:textSize="@dimen/text_Medium_Size"
            android:textColor="@color/colorWhite"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="$5"
            android:gravity="center|end"
            android:layout_gravity="end"
            android:fontFamily="@font/nunito_regular"
            android:layout_marginRight="@dimen/_10sdp"
            android:textSize="@dimen/text_Medium_Size"
            android:textColor="@color/colorWhite"/>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cv_pay_to_be_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        app:cardCornerRadius="@dimen/_5sdp"
        app:cardBackgroundColor="@color/colorPrimary"
        app:cardElevation="@dimen/_5sdp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Pay to be on top"
            android:gravity="center|start"
            android:fontFamily="@font/nunito_regular"
            android:layout_marginLeft="@dimen/_10sdp"
            android:textSize="@dimen/text_Medium_Size"
            android:textColor="@color/colorWhite"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="$5"
            android:gravity="center|end"
            android:layout_gravity="end"
            android:fontFamily="@font/nunito_regular"
            android:layout_marginRight="@dimen/_10sdp"
            android:textSize="@dimen/text_Medium_Size"
            android:textColor="@color/colorWhite"/>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cv_subscription"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        app:cardCornerRadius="@dimen/_5sdp"
        app:cardBackgroundColor="@color/colorPrimary"
        app:cardElevation="@dimen/_5sdp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Subscribe premium account"
            android:gravity="center|start"
            android:fontFamily="@font/nunito_regular"
            android:layout_marginLeft="@dimen/_10sdp"
            android:textSize="@dimen/text_Medium_Size"
            android:textColor="@color/colorWhite"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="$5"
            android:gravity="center|end"
            android:layout_gravity="end"
            android:fontFamily="@font/nunito_regular"
            android:layout_marginRight="@dimen/_10sdp"
            android:textSize="@dimen/text_Medium_Size"
            android:textColor="@color/colorWhite"/>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cv_business"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        app:cardCornerRadius="@dimen/_5sdp"
        app:cardBackgroundColor="@color/colorPrimary"
        app:cardElevation="@dimen/_5sdp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Promote business"
            android:gravity="center|start"
            android:fontFamily="@font/nunito_regular"
            android:layout_marginLeft="@dimen/_10sdp"
            android:textSize="@dimen/text_Medium_Size"
            android:textColor="@color/colorWhite"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="$5"
            android:gravity="center|end"
            android:layout_gravity="end"
            android:fontFamily="@font/nunito_regular"
            android:layout_marginRight="@dimen/_10sdp"
            android:textSize="@dimen/text_Medium_Size"
            android:textColor="@color/colorWhite"/>

    </android.support.v7.widget.CardView>

</LinearLayout>
