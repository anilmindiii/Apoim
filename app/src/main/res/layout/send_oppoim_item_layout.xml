<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_8sdp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_4sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_4sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:elevation="@dimen/_4sdp"
            android:minHeight="@dimen/_140sdp"
            app:cardBackgroundColor="@color/colorWhite"
            app:cardCornerRadius="@dimen/_4sdp">

            <LinearLayout
                android:id="@+id/ly_main_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_100sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nunito_bold"
                            android:maxLines="1"
                            android:text="Rachal smith"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/text_Medium_Size" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/nunito_regular"
                                android:maxLines="1"
                                android:text="10 Feb 2018,"
                                android:textColor="@color/colorBlack"
                                android:textSize="@dimen/text_Small_Size" />

                            <TextView
                                android:id="@+id/tv_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/nunito_regular"
                                android:maxLines="1"
                                android:text=" 03:30 PM"
                                android:textColor="@color/colorGray"
                                android:textSize="@dimen/text_Small_Size" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_location"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:fontFamily="@font/nunito_regular"
                            android:maxLines="2"
                            android:text="mindiii system pvt limited piplihana, Indore "
                            android:textColor="@color/colorGray"
                            android:textSize="@dimen/text_Small_Size" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/nunito_regular"
                                android:text="Offer price:"
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="@dimen/text_Small_Size" />

                            <TextView
                                android:id="@+id/tv_offer_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:fontFamily="@font/nunito_semibold"
                                android:text="Free"
                                android:textColor="@color/colorBlack"
                                android:textSize="@dimen/text_Small_Size" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ly_counter_price"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/nunito_regular"
                                android:text="Counter price:"
                                android:textColor="@android:color/holo_orange_dark"
                                android:textSize="@dimen/text_Small_Size" />

                            <TextView
                                android:id="@+id/tv_coounter_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:fontFamily="@font/nunito_semibold"
                                android:text="Free"
                                android:textColor="@color/colorBlack"
                                android:textSize="@dimen/text_Small_Size" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_time_ago"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_22sdp"
                    android:layout_marginBottom="@dimen/_4sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:elevation="@dimen/_5sdp"
                    android:fontFamily="@font/nunito_regular"
                    android:maxLines="2"
                    android:text="2 day ago"
                    android:textColor="@color/colorGray"
                    android:textSize="@dimen/text_Small_Size" />


                <RelativeLayout
                    android:id="@+id/ly_bottom_view"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:visibility="visible">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/_1sdp"
                        android:background="@color/colorWhite">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.7dp"
                            android:background="@color/colorLightGray" />

                        <RelativeLayout
                            android:id="@+id/ly_accept_reject"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:background="@color/white"
                            android:visibility="visible">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:weightSum="3">

                                <LinearLayout
                                    android:id="@+id/ly_accept"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:orientation="horizontal"
                                    android:weightSum="2">

                                    <ImageView
                                        android:layout_width="@dimen/_18sdp"
                                        android:layout_height="@dimen/_18sdp"
                                        android:layout_gravity="center"
                                        android:layout_weight="1"
                                        android:src="@drawable/accept" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_weight="1"
                                        android:text="Accept"
                                        android:textColor="@color/colorBlack"
                                        android:textSize="@dimen/text_Small_Size" />


                                </LinearLayout>

                                <View
                                    android:layout_width="1dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginBottom="@dimen/_8sdp"
                                    android:layout_marginTop="@dimen/_8sdp"
                                    android:background="@color/colorLightGray" />

                                <LinearLayout
                                    android:id="@+id/ly_reject"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:orientation="horizontal"
                                    android:weightSum="2">

                                    <ImageView
                                        android:layout_width="@dimen/_15sdp"
                                        android:layout_height="@dimen/_15sdp"
                                        android:layout_gravity="center"
                                        android:layout_weight="1"
                                        android:src="@drawable/reject" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_weight="1"
                                        android:text="Reject"
                                        android:textColor="@color/colorBlack"
                                        android:textSize="@dimen/text_Small_Size" />


                                </LinearLayout>


                                <LinearLayout
                                    android:id="@+id/ly_fill_counter_price"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:orientation="horizontal"
                                    android:weightSum="2">

                                    <View
                                        android:layout_width="1dp"
                                        android:layout_height="match_parent"
                                        android:layout_marginBottom="@dimen/_8sdp"
                                        android:layout_marginTop="@dimen/_8sdp"
                                        android:background="@color/colorLightGray" />


                                    <ImageView
                                        android:layout_width="@dimen/_18sdp"
                                        android:layout_height="@dimen/_18sdp"
                                        android:layout_gravity="center"
                                        android:layout_weight="1"
                                        android:src="@drawable/counter" />

                                    <TextView
                                        android:id="@+id/tv_counter_price"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_weight="1"
                                        android:text="Counter"
                                        android:textColor="@color/colorBlack"
                                        android:textSize="@dimen/text_Small_Size" />


                                </LinearLayout>

                            </LinearLayout>


                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/ly_status_counter"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:background="@color/white"
                            android:visibility="gone">

                            <LinearLayout
                                android:id="@+id/ly_counter"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="@dimen/_10sdp"
                                android:orientation="horizontal"
                                android:weightSum="2">

                                <ImageView
                                    android:layout_width="@dimen/_18sdp"
                                    android:layout_height="@dimen/_18sdp"
                                    android:layout_gravity="center"
                                    android:layout_marginRight="@dimen/_5sdp"
                                    android:layout_weight="1"
                                    android:src="@drawable/counter" />

                                <TextView
                                    android:id="@+id/tv_counter_price1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/nunito_semibold"
                                    android:text="Counter"
                                    android:textColor="@color/colorBlack"
                                    android:textSize="@dimen/text_Small_Size" />


                            </LinearLayout>


                            <TextView
                                android:id="@+id/tv_status"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_marginRight="@dimen/_85sdp"
                                android:fontFamily="@font/nunito_regular"
                                android:maxLines="1"
                                android:textColor="@color/colorBlack"
                                android:textSize="@dimen/text_Small_Size" />

                        </RelativeLayout>

                    </RelativeLayout>


                </RelativeLayout>

            </LinearLayout>


        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cvuserImg"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_95sdp"
            android:elevation="@dimen/_4sdp"
            app:cardCornerRadius="@dimen/_8sdp"
            app:cardElevation="@dimen/_4sdp">

            <com.github.siyamed.shapeimageview.RoundedImageView
                android:id="@+id/iv_profile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ico_user_placeholder"
                app:siRadius="@dimen/_8sdp" />


        </android.support.v7.widget.CardView>

    </RelativeLayout>


</RelativeLayout>
