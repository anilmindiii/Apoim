<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="@dimen/_2sdp">

    <RelativeLayout
        android:layout_width="@dimen/_300sdp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        android:orientation="vertical">



        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_3sdp"
            app:cardElevation="@dimen/_4sdp"
            app:cardCornerRadius="@dimen/_10sdp"
            android:layout_margin="@dimen/_5sdp"
            android:backgroundTint="@color/mdtp_white">



            <TextView
                android:id="@+id/dialog_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/josefinsans_semibold"
                android:padding="@dimen/_8sdp"
                android:text="Share"
                android:layout_gravity="center|top"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/text_Large_Size" />

            <TextView
                android:id="@+id/tv_dialog_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Share profile with your friends"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_36sdp"
                android:gravity="center"
                android:textSize="@dimen/text_Medium_Size"
                android:fontFamily="@font/nunito_regular"
                android:textColor="@color/colorBlack"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_120sdp"
                android:layout_marginTop="@dimen/_65sdp">

                <RelativeLayout
                    android:layout_width="@dimen/_121sdp"
                    android:layout_height="@dimen/_121sdp"
                    android:layout_centerInParent="true">

                    <LinearLayout
                        android:id="@+id/scr_shot_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <com.github.siyamed.shapeimageview.RoundedImageView
                            android:id="@+id/profile_image"
                            android:layout_width="@dimen/_120sdp"
                            android:layout_height="@dimen/_120sdp"
                            android:src="@drawable/ico_user_placeholder"
                            app:siRadius="6dp"
                            app:siBorderWidth="1dp"
                            android:layout_centerHorizontal="true"
                            app:siBorderColor="@color/colorPrimaryDark"
                            app:siSquare="true"/>


                    </LinearLayout>




                    <ImageView
                        android:layout_width="@dimen/_115sdp"
                        android:layout_height="@dimen/_36sdp"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentBottom="true"
                        android:src="@drawable/share_bg"/>


                </RelativeLayout>


            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/_190sdp">

                <TextView
                    android:id="@+id/tv_about_me"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_16sdp"
                    android:layout_marginRight="@dimen/_16sdp"
                    android:textColor="@color/colorBlack"
                    android:imeOptions="actionDone"
                    android:text="@string/share_text"
                    android:gravity="center"
                    android:textSize="@dimen/text_Medium_Size"
                    android:fontFamily="@font/nunito_regular" />


                <TextView
                    android:id="@+id/tv_share"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:background="@drawable/bg_login_btn"
                    android:fontFamily="@font/josefinsans_semibold"
                    android:text="Share"
                    android:textAllCaps="false"
                    android:layout_marginLeft="@dimen/_16sdp"
                    android:layout_marginRight="@dimen/_16sdp"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/text_Large_Size" />


            </LinearLayout>

        </android.support.v7.widget.CardView>


        <ImageView
            android:id="@+id/image_decline_button"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_alignParentRight="true"
            android:src="@drawable/close"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:elevation="@dimen/_7sdp" />


    </RelativeLayout>





</RelativeLayout>
